{% assign first-link = "https://api.whatsapp.com/send?phone=" %}
{% assign phone-num = settings.phone-num | strip %}
{% assign second-link = "&text=Hola, me comunico para solicitar presupuesto del producto:%0AMi nombre es: %0ASoy de: " %}
{% assign text-to-send = settings.text-to-send %}
{% capture first-part %}
{{ first-link | append: phone-num }}
{% endcapture %}
{% capture second-part %}
{{ first-part | append: second-link }}
{% endcapture %}
{% capture text-converted-to-link %}
{{ text-to-send | escape }}
{% endcapture %}
{% capture third-part %}
{{ second-part | append: text-converted-to-link }}
{% endcapture %}
<a href="{{third-part}}" class="float {% if settings.hide-desktop %} medium-up--hide {% endif %}{% if settings.whatsapp-pl == 'whatsapp-right' %} float-right {% endif %} {% if settings.whatsapp-pl == 'whatsapp-left' %} float-left {% endif %}" target="_blank" title="Whatsapp" rel="noreferrer">
<i class="fa fa-whatsapp" aria-hidden="true"></i>
</a>